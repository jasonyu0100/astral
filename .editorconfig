# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Set default charset
charset = utf-8

# Indentation style
indent_style = space
indent_size = 2

# Trim trailing whitespace
trim_trailing_whitespace = true

# Matches multiple files with brace expansion notation
# Set specific styles for TypeScript files
[*.ts,*.tsx]
indent_size = 2
indent_style = space

# Set styles for JSON files
[*.json]
indent_size = 2
indent_style = space

# Set styles for Markdown files
[*.md]
trim_trailing_whitespace = false

# Set styles for YAML files
[*.yml,*.yaml]
indent_size = 2
indent_style = space

# Set styles for JavaScript files
[*.js,*.jsx]
indent_size = 2
indent_style = space

# Set styles for CSS files
[*.css,*.scss]
indent_size = 2
indent_style = space

# Set styles for HTML files
[*.html]
indent_size = 2
indent_style = space